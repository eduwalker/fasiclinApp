<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_white"
        tools:context=".TelaQuestions">


        <View
            android:id="@+id/containerTop"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/background_view_dash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerTop"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/buttonReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_return"
            android:padding="5dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/containerTop"
            android:layout_marginStart="18dp"
            android:layout_marginTop="19dp" />



        <TextView
            android:id="@+id/txtTop"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="@string/txt_registroanamnese"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/txtTitulo1.1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="1.1 Identificação"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="start"
            android:paddingStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="110dp"/>



        <TextView
            android:id="@+id/txtNome"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Nome"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="start"
            android:paddingStart="15dp"
            app:layout_constraintTop_toTopOf="@id/txtTitulo1.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="40dp"/>


        <EditText
            android:id="@+id/editNome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="Nome"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="180dp"/>


        <EditText
            android:id="@+id/editCpf"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="CPF"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/editNome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>

        <EditText
            android:id="@+id/editIdade"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="IDADE"
            android:inputType="number"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/editCpf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>



        <Spinner
            android:id="@+id/spinnerSexo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="SEXO"
            android:background="@drawable/background_list"
            app:layout_constraintTop_toBottomOf="@id/editIdade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="14dp" />


        <EditText
            android:id="@+id/editRG"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="RG"
            android:inputType="number"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/spinnerSexo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>


        <EditText
            android:id="@+id/editCartaoSus"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="CARTÃO SUS"
            android:inputType="text"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/editRG"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>


        <EditText
            android:id="@+id/editLeito"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="LEITO"
            android:inputType="text"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/editCartaoSus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>


        <EditText
            android:id="@+id/editProfissao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="PROFISSÃO"
            android:inputType="text"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/editLeito"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>


        <EditText
            android:id="@+id/editEscolaridade"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="ESCOLARIDADE"
            android:inputType="text"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/editProfissao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>


        <Spinner
            android:id="@+id/spinnerEstadoCivil"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="ESTADO CIVIL"
            android:background="@drawable/background_list"
            app:layout_constraintTop_toBottomOf="@id/editEscolaridade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="14dp" />


        <EditText
            android:id="@+id/editDiagMedico"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="DIAGNÓTICO MÉDICO"
            android:inputType="text"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/spinnerEstadoCivil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>


        <TextView
            android:id="@+id/txtTitulo1.2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="1.2 Informações sobre doença e tratamento"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="start"
            android:paddingStart="15dp"
            app:layout_constraintTop_toTopOf="@id/editDiagMedico"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="70dp"/>


        <EditText
            android:id="@+id/editMotivInter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="MOTIVO DA INTERNAÇÃO"
            android:inputType="text"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/txtTitulo1.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>


        <EditText
            android:id="@+id/editDoencaCronica"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="DOENÇAS CRÓNICAS"
            android:inputType="text"
            android:paddingStart="10dp"
            android:background="@drawable/background_question_button"
            app:layout_constraintTop_toTopOf="@id/editMotivInter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="55dp"/>

        <Button
            android:id="@+id/buttonConfirmar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/editDoencaCronica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonCancelar"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/red_mate"
            app:layout_constraintTop_toTopOf="@id/buttonConfirmar"
            app:layout_constraintStart_toEndOf="@id/buttonConfirmar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
