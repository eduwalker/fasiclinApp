<!-- res/drawable/spinner_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <!-- Cor de fundo -->
                    <solid android:color="@color/white"/>
                    <!-- Configuração da borda -->
                    <stroke android:width="2dp" android:color="@color/dark_cyan_green"/>
                    <!-- Configuração dos cantos arredondados -->
                    <corners android:topLeftRadius="10dp"
                        android:bottomRightRadius="10dp"/>
                </shape>
            </item>

            <item android:drawable="@drawable/ic_list" android:gravity="end|center_vertical" />
        </layer-list>
    </item>
</selector>
